<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verification_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:id="@+id/verification_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintTop_toBottomOf="@+id/verification_icon"
        android:layout_marginTop="40dp"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/monsterrat_medium"
        android:textSize="13sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Enter your mobile number we will send you the OTP to verify later"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info"
        android:orientation="horizontal"
        android:id="@+id/input_field_container"
        android:weightSum="1">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardElevation="10dp"
            android:layout_weight="0.2"
            app:cardCornerRadius="30dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxStrokeWidth="0dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:expandedHintEnabled="false"
                app:hintEnabled="false"
                app:placeholderText="+99"
                app:placeholderTextColor="@color/hintColor"
                android:id="@+id/area_code"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_medium"
                    android:paddingTop="12dp"
                    android:maxLength="4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardElevation="10dp"
            android:layout_weight="0.8"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                app:expandedHintEnabled="false"
                app:placeholderTextColor="@color/hintColor"
                app:placeholderText="123456789"
                app:boxBackgroundColor="@color/white"
                android:id="@+id/phone"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_medium"
                    android:paddingTop="12dp"
                    android:maxLength="15"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/error"
        app:layout_constraintTop_toBottomOf="@+id/input_field_container"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        app:fontFamily="@font/monsterrat_medium"
        android:textColor="@color/googleColor"
        android:text="Phone Number is invalid"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/submit"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/error"
        android:layout_marginTop="40dp"
        android:text="Submit"
        android:fontFamily="@font/monsterrat_bold"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>