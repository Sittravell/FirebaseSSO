<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/monsterrat_bold"
        android:gravity="center"
        android:text="Enter code"
        android:textColor="@color/darkGreen"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/monsterrat_medium"
        android:gravity="center"
        android:text="We have sent you an SMS on +92 7020764458 with 6 digit verification code."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/input_field_container">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/d1"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_height="55dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                android:id="@+id/c1"
                app:boxStrokeWidth="0dp"
                style="@style/CodeInputStyle"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_bold"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:maxLength="3"
                    android:inputType="number"
                    android:paddingTop="12dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="0dp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/d2"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:layout_height="55dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                style="@style/CodeInputStyle"
                app:boxCornerRadiusTopEnd="30dp"
                android:id="@+id/c2"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_bold"
                    android:layout_width="match_parent"
                    android:paddingStart="13dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="12dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:text="4"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/d3"
            android:layout_marginBottom="40dp"
            android:layout_height="55dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:id="@+id/c3"
                style="@style/CodeInputStyle"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_bold"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:paddingTop="12dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:text="4"
                    android:paddingStart="13dp"
                    android:paddingEnd="0dp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/d4"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:layout_height="55dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/CodeInputStyle"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxStrokeWidth="0dp"
                android:id="@+id/c4"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_bold"
                    android:layout_width="match_parent"
                    android:paddingStart="13dp"
                    android:maxLength="1"
                    android:paddingTop="12dp"
                    android:paddingEnd="0dp"
                    android:inputType="number"
                    android:text="4"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/d5"
            android:layout_height="55dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxStrokeWidth="0dp"
                style="@style/CodeInputStyle"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                android:id="@+id/c5"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_bold"
                    android:layout_width="match_parent"
                    android:paddingStart="13dp"
                    android:paddingEnd="0dp"
                    android:text="4"
                    android:paddingTop="12dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/d6"
            android:layout_marginBottom="40dp"
            android:layout_height="55dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="30dp"
                style="@style/CodeInputStyle"
                app:boxStrokeWidth="0dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="30dp"
                android:id="@+id/c6"
                app:boxCornerRadiusBottomStart="30dp"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/monsterrat_bold"
                    android:layout_width="match_parent"
                    android:maxLength="1"
                    android:paddingStart="13dp"
                    android:paddingTop="12dp"
                    android:inputType="number"
                    android:text="6"
                    android:paddingEnd="0dp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error"
        android:textColor="@color/googleColor"
        app:fontFamily="@font/monsterrat_medium"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/input_field_container"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/error"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resend_desc"
            android:fontFamily="@font/monsterrat_medium"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="I didnâ€™t receive the code, " />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resend"
            android:fontFamily="@font/monsterrat_medium"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/darkGreen"
            android:text="Resend" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>